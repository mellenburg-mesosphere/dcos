#!/bin/bash
source /opt/mesosphere/environment.export
export LIB_INSTALL_DIR="$PKG_PATH/lib/python3.5/site-packages"
mkdir -p "$LIB_INSTALL_DIR"

mkdir -p /build
# Copy from the ro /pkg/extra to a rw folder.
cp -r /pkg/extra/* /build
cd /build
py.test
env
python3 /pkg/src/pyinstaller/pyinstaller.py dcos-launch.spec
# TODO: trasnsfer out dcos-launch to top-level artifacts
